{{#if url}}
<form action="/editar/{{url._id}}" method="post">
    <input type="hidden" name="_csrf" value="{{crsfToken}}">
    <input value="{{url.origin}}" type="text" name="origin" placeholder="ingrese url" class="form-control my-2">
    <button type="submit" class="btn btn-warning w-100 mb-2">Editar url</button>
</form>
    {{else}}
    <form action="/" method="post">
    <input type="hidden" name="_csrf" value="{{crsfToken}}">
    <input type="text" name="origin" placeholder="ingrese url" class="form-control my-2">
    <button type="submit" class="btn btn-primary w-100 mb-2">Agregar url</button>
    </form>

{{/if}}